<?xml version="1.0" encoding="UTF-16"?>
<Task version="1.2" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <!-- Windows Task Scheduler XML for Automated Backups -->
  <!-- Import this task using: schtasks /create /xml "scheduled_backup.xml" /tn "PostgreSQL Bubble Tea Backup" -->
  
  <RegistrationInfo>
    <Date>2024-01-01T00:00:00</Date>
    <Author>Bubble Tea Database Administrator</Author>
    <Description>Automated daily backup of Bubble Tea PostgreSQL database at 2 AM</Description>
  </RegistrationInfo>
  
  <Triggers>
    <!-- Run daily at 2:00 AM -->
    <CalendarTrigger>
      <StartBoundary>2024-01-01T02:00:00</StartBoundary>
      <Enabled>true</Enabled>
      <ScheduleByDay>
        <DaysInterval>1</DaysInterval>
      </ScheduleByDay>
    </CalendarTrigger>
  </Triggers>
  
  <Principals>
    <Principal id="Author">
      <LogonType>InteractiveToken</LogonType>
      <RunLevel>HighestAvailable</RunLevel>
    </Principal>
  </Principals>
  
  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>true</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>false</RunOnlyIfNetworkAvailable>
    <IdleSettings>
      <StopOnIdleEnd>false</StopOnIdleEnd>
      <RestartOnIdle>false</RestartOnIdle>
    </IdleSettings>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Enabled>true</Enabled>
    <Hidden>false</Hidden>
    <RunOnlyIfIdle>false</RunOnlyIfIdle>
    <WakeToRun>false</WakeToRun>
    <ExecutionTimeLimit>PT1H</ExecutionTimeLimit>
    <Priority>7</Priority>
  </Settings>
  
  <Actions Context="Author">
    <Exec>
      <Command>C:\Users\VICTUS\Downloads\Alisher Downloads\Bubble Tea\database\backup_scripts\pg_dump_backup.bat</Command>
      <WorkingDirectory>C:\Users\VICTUS\Downloads\Alisher Downloads\Bubble Tea</WorkingDirectory>
    </Exec>
  </Actions>
</Task>


